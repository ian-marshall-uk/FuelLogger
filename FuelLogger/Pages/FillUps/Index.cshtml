@page
@model FuelLogger.Pages.FillUps.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
@User.Identity.Name
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].OdometerReading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Litres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].PricePerLitre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FillUp)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OdometerReading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Litres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerLitre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
