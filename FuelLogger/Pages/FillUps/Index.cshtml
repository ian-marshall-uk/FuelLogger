@page
@model FuelLogger.Pages.FillUps.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a class="btn btn-sm btn-success" asp-page="Create">Create New</a>
</p>
@User.Identity.Name
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Litres)
            </th>
            <th>
                Cost
            </th>
            <th>
                Miles
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].MPG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillUp[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FillUp)
        {
            <tr>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Litres)
                </td>
                <td>
                    £ @((item.PricePerLitre * item.Litres).ToString("##0.00"))
                </td>
                <td>
                    @item.MileageDelta
                </td>
                <td>
                    @if (item.MPG < 50)
                    {
                        <p class="text-danger"><b>@item.MPG.ToString("##0.0")</b></p>
                    }
                    @if (item.MPG >= 50 && item.MPG < 55)
                    {
                        <p class="text-warning"><b>@item.MPG.ToString("##0.0")</b></p>
                    }
                    @if (item.MPG >= 55)
                    {
                        <p class="text-success"><b>@item.MPG.ToString("##0.0")</b></p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-sm btn-primary" asp-page="..\Index">Back</a>
